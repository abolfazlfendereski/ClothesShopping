
@{
    ViewData["Title"] = "Home Page";
    int sliderCout = 1;
}

@model HomePageViewModel
<div class="clearfix"></div>
<!-- ============================================================== -->
<!-- Top header  -->
<!-- ============================================================== -->
<!-- ======================== Banner Start ==================== -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        @for (int i = 1; i < Model.Sliders.Count() - 1; i++)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
        }



    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model.Sliders)
        {
            if (sliderCout == 1)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/Slider/@item.Srcimg" alt="First slide">
                    <div class="carousel-caption banner_caption">
                        <h4><span class="theme-cl">@item.RedBoldTxt</span> @item.BoldTxt</h4>
                        <p>@item.Discription</p>
                        <a href="@item.Link" class="btn btn-theme">خرید کنید</a>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/Slider/@item.Srcimg" alt="First slide">
                    <div class="carousel-caption banner_caption">
                        <h4><span class="theme-cl">@item.RedBoldTxt</span> @item.BoldTxt</h4>
                        <p>@item.Discription</p>
                        <a href="@item.Link" class="btn btn-theme">خرید کنید</a>
                    </div>
                </div>
            }

            sliderCout++;
        }

    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">قبلی</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">بعدی</span>
    </a>
</div>
<!-- ======================== Women Accessiries Start ==================== -->


<!-- ======================== Top category ==================== -->
<section>
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model.HomeCard)
            {            
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="card card_big">
                    <div class="card-bg">
                        <div class="card-bg-img bg-cover" style="background:#fde9ed "><img src="~/images/HomeCard/@item.imgSrc" width="350"  alt="Alternate Text" /></div>
                        
                    </div>
                    <div class="card-body my-auto">
                        <!-- Heading -->
                        <h3 class="mb-0 text-danger">@item.textcard</h3>
                        <br />
                        <!-- Link -->
                        <a class="btn btn-link" href="@item.link">
                            خرید جدید <i class="ti-arrow-left mr-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            }
            

        </div>
    </div>
</section>
<!-- ======================== Top category End ==================== -->



<!-- ======================= Hot Deal Start ============================== -->
<section class="pt-0">
    <div class="container">
        <div class="row align-item-center">

            <div class="col-lg-6 col-md-6">
                <div class="d-flex flex-column overflow-hidden rounded-lg pad-bt">
                    <a href="@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Right).FirstOrDefault().link "><img src="~/images/Homeimg/@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Right)?.FirstOrDefault()?.imgSrc?? '' " class="img-fluid" alt="" /></a>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="offer-deals mb-4">
                    <a href="@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Left1).FirstOrDefault().link"><img src="~/images/Homeimg/@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Left1)?.FirstOrDefault()?.imgSrc?? '' " class="img-fluid" alt="" /></a>
                </div>
                <div class="offer-deals mt-3">
                    <a href="@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Left2).FirstOrDefault().link"><img src="~/images/Homeimg/@Model.Homeimg.Where(p=>p.LocationImg==BissnessEntity.LocationImg.Left2)?.FirstOrDefault()?.imgSrc?? '' " class="img-fluid" alt="" /></a>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- ======================= Hot Deals End =============================== -->

<section class="pt-0">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="sec-heading-flex pl-2 pr-2">
                    <div class="sec-heading-flex-one">
                        <h2>جدیدترین ها</h2>
                    </div>
                    <div class="sec-heading-flex-last">
                        <a href="/product/showproduct" class="btn btn-theme">بیشتر<i class="ti-arrow-left mr-2"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="owl-carousel products-slider owl-theme">
                    @foreach (var item in Model.Dinamic)
                    {

                        <div class="item">
                            <div class="woo_product_grid">
                                <div class="woo_product_thumb">
                                    <img src="~/images/product/@item.ImageSrc" class="img-fluid" alt="" />
                                </div>
                                <div class="woo_product_caption center">
                                    <div class="woo_rate">
                                        @for (int i = 0; i <= item.star; i++)
                                        {
                                            <i class="fa fa-star active"></i>
                                        }
                                        @for (int i = 0; i <= (5 - item.star); i++)
                                        {
                                            <i class="fa fa-star filled"></i>
                                        }
                                    </div>
                                    <div class="woo_title">
                                        <h4 class="woo_pro_title"><a href="detail-1.html">@item.Title</a></h4>
                                    </div>
                                    <div class="woo_price">
                                        <h6>@item.price.ToString("n0") تومان</h6>
                                    </div>
                                </div>
                                <div class="woo_product_cart hover">
                                    <ul>
                                        <li><a href="~/product/Detail?id=@item.id" class="woo_cart_btn btn_cart"><i class="ti-eye"></i></a></li>
                                        <li><a href="/Cart/AddCart?id=@item.id" class="woo_cart_btn btn_view"><i class="ti-shopping-cart"></i></a></li>
                                        <li><a href="/Product/AddFavorite?ProductId=@item.id" class="woo_cart_btn btn_save"><i class="ti-heart"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>
<div class="clearfix"></div>
